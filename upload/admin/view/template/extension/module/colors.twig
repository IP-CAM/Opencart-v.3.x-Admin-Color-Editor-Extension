                                <label class="control-label col-xs-7" for="color_text_secondary">{{ text_color_text_secondary }}</label>
                                <div class="col-xs-5">
                                    <input type="color" id="color_text_secondary" name="color_text_secondary" value="{{ color_text_secondary }}" placeholder="{{ text_choose_color }}">
                                </div>
                            </div>
