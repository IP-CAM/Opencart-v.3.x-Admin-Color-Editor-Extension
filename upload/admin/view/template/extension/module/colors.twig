{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
            <div class="pull-right">
                <button {% if module_colors_status == false %} disabled {% endif %} type="submit" form="form-colors" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
        <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}
        {% if success %}
        <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}
        <div class="row" style="position:relative">
            {% if module_colors_status == false %}
               <div style="background:rgba(50,50,50,0.8);left:0;top:0;right:0;bottom:0;position:absolute;z-index:999"><h1 style="text-align: center; margin-top:5%;color:#777;font-weight:600">Módulo Deshabilitado</h1></div>
            {% endif %}
            <div class="col-lg-3 col-md-4 col-sm-12">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-paint-brush"></i> {{ text_colors_panel }}</h3>
                    </div>
                    <div class="panel-body" style="height: 540px; overflow:auto;">
                        <form action="" method="post" enctype="multipart/form-data" id="form-colors" class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-xs-7" for="color_primary">{{ text_color_primary }}</label>
                                <div class="col-xs-5">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <input type="color" id="color_primary" name="color_primary" value="{{ color_primary }}" placeholder="{{ text_choose_color }}">
                                        </div>
                                        <div class="col-xs-6">
                                            <input type="color" id="color_primary_variant" name="color_primary_variant" value="{{ color_primary_variant }}" placeholder="{{ text_choose_color }}"  data-toggle="tooltip" title="{{ text_color_primary_variant }}">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% if error_color_primary %}
                            <div class="text-danger">{{ error_color_primary }}</div>
                            {% endif %}
                            {% if error_color_primary_variant %}
                            <div class="text-danger">{{ error_color_primary_variant }}</div>
                            {% endif %}
                            <div class="form-group">
                                <label class="control-label col-xs-7" for="color_text_primary">{{ text_color_text_primary }}</label>
                                <div class="col-xs-5">
                                    <input type="color" id="color_text_primary" name="color_text_primary" value="{{ color_text_primary }}" placeholder="{{ text_choose_color }}">
                                </div>
                            </div>
                            {% if error_color_text_primary %}
                            <div class="text-danger">{{ error_color_text_primary }}</div>
                            {% endif %}
                            <div class="form-group">
                                <label class="control-label col-xs-7" for="color_secondary">{{ text_color_secondary }}</label>
                                <div class="col-xs-5">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <input type="color" id="color_secondary" name="color_secondary" value="{{ color_secondary }}" placeholder="{{ text_choose_color }}">
                                        </div>
                                        <div class="col-xs-6">
                                            <input type="color" id="color_secondary_variant" name="color_secondary_variant" value="{{ color_secondary_variant }}" placeholder="{{ text_choose_color }}"  data-toggle="tooltip" title="{{ text_color_secondary_variant }}">
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                            {% if error_color_secondary %}
                            <div class="text-danger">{{ error_color_secondary }}</div>
                            {% endif %}
                            {% if error_color_secondary_variant %}
