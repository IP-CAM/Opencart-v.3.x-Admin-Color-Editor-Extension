                                </div>
                            </div>
                            {% if error_color_titles %}
                            <div class="text-danger">{{ error_color_titles }}</div>
                            {% endif %}
                        </form>
                    </div>
                </div>

            </div>
            <div class="col-lg-9 col-md-8 col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-eye"></i> {{ text_viewport_panel }}</h3>
                        </div>
                        <div class="panel-body" style="padding: 0; height: 540px; overflow: hidden;">
                            <iframe src="{{ storefront_url }}" style="width: 100%; height: 540px; border: none" id="storefront_viewport">
                            </iframe>
                        </div>
                    </div>
            </div>
        </div>

    </div>
</div>
<style type="text/css">
    input[type=color] {
        height: 32px;
        width: 32px;
    }
</style>
<script>
$(function() {
    var storeFrontViewport = document.getElementById("storefront_viewport");
    var stylesheetEl = document.createElement('style');
    stylesheetEl.type = 'text/css';
    stylesheetEl.id = 'stylesheet_colors';
    $("input[type=color]").change(function() {
        generateStylesheet();
    });

    function generateStylesheet() {
        var data = $('#form-colors').serialize();
        $.post('index.php?route=extension/module/colors/generate&user_token={{user_token}}', data, function(response) {
            var viewportBody = storeFrontViewport.contentWindow.document.body;
            stylesheetEl.innerHTML = response;
            if (stylesheetEl.parentElement == viewportBody)
                viewportBody.removeChild(stylesheetEl);
            viewportBody.appendChild(stylesheetEl);
        });
    }
    // Actualiza constantemente la hoja de estilos simulada si detecta que se ha recargado la página.
    var currDoc = storeFrontViewport.contentWindow.document;
    function updateOnLoad() {
        var newDoc = storeFrontViewport.contentWindow.document;
        if (currDoc != newDoc) {
            currDoc = newDoc;
            generateStylesheet();
        }
        setTimeout(updateOnLoad, 100);
    }
    updateOnLoad();
});
</script>
